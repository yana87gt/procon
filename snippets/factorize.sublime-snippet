    <content><![CDATA[
template<typename T> 
map<T,int> factorize(T x){
    map<T,int> mp;
    for (T i = 2; i*i <= x; i++){
        while (x%i == 0) {
            x /= i;
            mp[i]++;
        }
        if (x == 1) break;
    }
    if (x != 1) mp[x]++;
    return mp;
}

]]></content>
    <tabTrigger>lib-factorize</tabTrigger>
    <scope>source.c++</scope>
</snippet>
